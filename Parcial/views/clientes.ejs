<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Venta de productos</title>
</head>
<body>
  <h1>Registro de venta</h1>
  <form action="/venta/agregar" method="POST">
    <label for="producto">Producto:</label>
    <select id="producto" name="productCode">
      <% Object.values(productos).forEach(producto => { %>
        <option value="<%= producto.code %>"><%= producto.description %></option>
      <% }) %>
    </select>
    <label for="cantidad">Cantidad:</label>
    <input type="number" id="cantidad" name="quantity" min="1" value="1">
    <button type="submit">Agregar</button>
  </form>

  <h2>Productos en la venta</h2>
  

  <script src="clientes.js"></script>
</body>
</html>
